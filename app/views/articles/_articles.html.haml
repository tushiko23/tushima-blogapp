= link_to article_path(article) do
  .card
    .card_image
      = image_tag 'eyecatch1.png'
    .card_title
      = link_to article.title, article_path(id: article.id)
    .card_content
      .card_heart
        = image_tag 'heart.svg'
        %span 23
      .card_detail
        = image_tag 'default-avatar.png'
        %div
          %p= article.author_name
          %p= article.display_created_at
